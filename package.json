{
  "name": "routini",
  "private": true,
  "version": "0.1.3",
  "main": "dist-electron/electron.js",
  "description": "Sistema de agendamento e gerenciamento de consultas - Routini",
  "author": "Elisson Cardoso",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && tsc src/electron.ts --outDir dist-electron --esModuleInterop",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron src/electron.ts",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:preview": "npm run build && electron ."
  },
  "build": {
    "appId": "com.routini.app",
    "productName": "Routini",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Routini",
      "artifactName": "Routini-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "Routini-${version}-portable.exe"
    }
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.17",
    "@fullcalendar/daygrid": "^6.1.17",
    "@fullcalendar/interaction": "^6.1.17",
    "@fullcalendar/react": "^6.1.17",
    "@fullcalendar/resource-common": "^5.11.5",
    "@fullcalendar/resource-timegrid": "^6.1.17",
    "@fullcalendar/timegrid": "^6.1.17",
    "@headlessui/react": "^2.2.1",
    "@heroicons/react": "^2.2.0",
    "countup.js": "^2.8.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.5.0",
    "react-to-print": "^3.0.6",
    "recharts": "^2.15.2",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.16",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.0",
    "terser": "^5.43.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
